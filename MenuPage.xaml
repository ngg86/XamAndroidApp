<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnotherApp.MenuPage">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <Button 
                x:Name ="CustomerButton"
                Text="Customers"
                Clicked="CustomerButton_OnClicked"/>
            <Button 
                x:Name="PackingLabelButton"
                Text="Packing Labels"
                Clicked="PackingLabelButton_OnClicked"/>
            <Button
                x:Name="SettingsButton"
                Clicked="SettingsButton_OnClicked"
                Text="Settings"
                VerticalOptions="End"/>
            <Label
                x:Name="WarningLabel"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>